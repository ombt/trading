export OMBT_OMBT_BASE_PATH=${OMBT_TRADING_BASE_PATH}/../ombt
#
export ROOT=$OMBT_TRADING_BASE_PATH
#
PATH="${OMBT_TRADING_BASE_PATH}/bin:${PATH}"
#
