export OMBT_TRADING_BASE_PATH=$(pwd)
#
export OMBT_ANALYTICS_BASE_PATH=${OMBT_TRADING_BASE_PATH}/../analytics
export OMBT_CSV_BASE_PATH=${OMBT_TRADING_BASE_PATH}/../csv
export OMBT_DB_BASE_PATH=${OMBT_TRADING_BASE_PATH}/../db
